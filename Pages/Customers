import React, { useState } from 'react';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { base44 } from '@/api/base44Client';
import PageHeader from '../components/shared/PageHeader';
import DataTable from '../components/shared/DataTable';
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Badge } from "@/components/ui/badge";
import { Avatar, AvatarFallback } from "@/components/ui/avatar";
import {
  Sheet,
  SheetContent,
  SheetHeader,
  SheetTitle,
  SheetFooter,
} from "@/components/ui/sheet";
import {
  DropdownMenu,
  DropdownMenuContent,
  DropdownMenuItem,
  DropdownMenuTrigger,
} from "@/components/ui/dropdown-menu";
import { 
  Search, 
  MoreVertical, 
  Pencil, 
  Trash2, 
  Users,
  Phone,
  Mail,
  MapPin,
  ShoppingCart
} from 'lucide-react';
import { toast } from "sonner";
import { cn } from "@/lib/utils";

export default function Customers() {
  const [searchQuery, setSearchQuery] = useState('');
  const [showSheet, setShowSheet] = useState(false);
  const [editingCustomer, setEditingCustomer] = useState(null);
  const queryClient = useQueryClient();

  const { data: customers = [], isLoading } = useQuery({
    queryKey: ['customers'],
    queryFn: () => base44.entities.Customer.list('-created_date'),
  });

  const { data: orders = [] } = useQuery({
    queryKey: ['orders'],
    queryFn: () => base44.entities.Order.list(),
  });

  const createMutation = useMutation({
    mutationFn: (data) => base44.entities.Customer.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries(['customers']);
      toast.success('تم إضافة العميل بنجاح');
      setShowSheet(false);
      setEditingCustomer(null);
    },
  });

  const updateMutation = useMutation({
    mutationFn: ({ id, data }) => base44.entities.Customer.update(id, data),
    onSuccess: () => {
      queryClient.invalidateQueries(['customers']);
      toast.success('تم تحديث بيانات العميل');
      setShowSheet(false);
      setEditingCustomer(null);
    },
  });

  const deleteMutation = useMutation({
    mutationFn: (id) => base44.entities.Customer.delete(id),
    onSuccess: () => {
      queryClient.invalidateQueries(['customers']);
      toast.success('تم حذف العميل');
    },
  });

  const getCustomerOrders = (customerPhone) => {
    return orders.filter(o => o.customer_phone === customerPhone);
  };

  const getCustomerSpent = (customerPhone) => {
    return getCustomerOrders(customerPhone)
      .filter(o => o.status === 'delivered')
      .reduce((sum, o) => sum + (o.total_amount || 0), 0);
  };

  const filteredCustomers = customers.filter(customer => {
    return (
      customer.name?.toLowerCase().includes(searchQuery.toLowerCase()) ||
      customer.phone?.includes(searchQuery) ||
      customer.email?.toLowerCase().includes(searchQuery.toLowerCase())
    );
  });

  const handleSubmit = (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    const data = {
      name: formData.get('name'),
      phone: formData.get('phone'),
      email: formData.get('email'),
      address: formData.get('address'),
      is_active: editingCustomer?.is_active ?? true,
    };

    if (editingCustomer) {
      updateMutation.mutate({ id: editingCustomer.id, data });
    } else {
      createMutation.mutate(data);
    }
  };

  const columns = [
    {
      header: 'العميل',
      cell: (row) => (
        <div className="flex items-center gap-3">
          <Avatar className="h-10 w-10">
            <AvatarFallback className="bg-teal-100 text-teal-700 font-semibold">
              {row.name?.charAt(0) || '?'}
            </AvatarFallback>
          </Avatar>
          <div>
            <p className="font-medium text-slate-800">{row.name}</p>
            <p className="text-xs text-slate-400" dir="ltr">{row.phone}</p>
          </div>
        </div>
      ),
    },
    {
      header: 'البريد',
      cell: (row) => (
        <span className="text-sm text-slate-600">{row.email || '-'}</span>
      ),
    },
    {
      header: 'العنوان',
      cell: (row) => (
        <span className="text-sm text-slate-600 truncate max-w-[200px] block">
          {row.address || '-'}
        </span>
      ),
    },
    {
      header: 'الطلبات',
      cell: (row) => {
        const orderCount = getCustomerOrders(row.phone).length;
        return (
          <div className="flex items-center gap-1">
            <ShoppingCart className="w-4 h-4 text-slate-400" />
            <span className="font-medium">{orderCount}</span>
          </div>
        );
      },
    },
    {
      header: 'إجمالي المشتريات',
      cell: (row) => (
        <span className="font-semibold text-emerald-600">
          {getCustomerSpent(row.phone).toFixed(2)} ل.س
        </span>
      ),
    },
    {
      header: 'الحالة',
      cell: (row) => (
        <Badge variant="outline" className={cn(
          row.is_active 
            ? 'bg-emerald-50 text-emerald-700 border-emerald-200' 
            : 'bg-red-50 text-red-600'
        )}>
          {row.is_active ? 'نشط' : 'معطل'}
        </Badge>
      ),
    },
    {
      header: '',
      cell: (row) => (
        <DropdownMenu>
          <DropdownMenuTrigger asChild>
            <Button variant="ghost" size="icon" className="h-8 w-8">
              <MoreVertical className="w-4 h-4" />
            </Button>
          </DropdownMenuTrigger>
          <DropdownMenuContent align="end">
            <DropdownMenuItem onClick={() => {
              setEditingCustomer(row);
              setShowSheet(true);
            }}>
              <Pencil className="w-4 h-4 ml-2" />
              تعديل
            </DropdownMenuItem>
            <DropdownMenuItem onClick={() => {
              updateMutation.mutate({ 
                id: row.id, 
                data: { is_active: !row.is_active } 
              });
            }}>
              {row.is_active ? 'تعطيل' : 'تفعيل'}
            </DropdownMenuItem>
            <DropdownMenuItem 
              className="text-red-600"
              onClick={() => deleteMutation.mutate(row.id)}
            >
              <Trash2 className="w-4 h-4 ml-2" />
              حذف
            </DropdownMenuItem>
          </DropdownMenuContent>
        </DropdownMenu>
      ),
    },
  ];

  return (
    <div className="space-y-6">
      <PageHeader 
        title="العملاء"
        description={`${customers.length} عميل`}
        action={() => {
          setEditingCustomer(null);
          setShowSheet(true);
        }}
        actionLabel="إضافة عميل"
      />

      {/* Search */}
      <Card className="border-0 shadow-sm">
        <CardContent className="p-4">
          <div className="relative">
            <Search className="absolute right-3 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400" />
            <Input
              placeholder="بحث بالاسم، الهاتف، أو البريد..."
              value={searchQuery}
              onChange={(e) => setSearchQuery(e.target.value)}
              className="pr-10"
            />
          </div>
        </CardContent>
      </Card>

      <DataTable 
        columns={columns}
        data={filteredCustomers}
        isLoading={isLoading}
        emptyMessage="لا يوجد عملاء"
      />

      {/* Add/Edit Sheet */}
      <Sheet open={showSheet} onOpenChange={setShowSheet}>
        <SheetContent side="left" className="w-full sm:max-w-lg" dir="rtl">
          <SheetHeader>
            <SheetTitle>
              {editingCustomer ? 'تعديل بيانات العميل' : 'إضافة عميل جديد'}
            </SheetTitle>
          </SheetHeader>
          <form onSubmit={handleSubmit} className="space-y-4 mt-6">
            <div className="space-y-2">
              <Label htmlFor="name">الاسم</Label>
              <Input 
                id="name" 
                name="name" 
                defaultValue={editingCustomer?.name}
                required 
              />
            </div>
            <div className="space-y-2">
              <Label htmlFor="phone">رقم الهاتف</Label>
              <Input 
                id="phone" 
                name="phone"
                defaultValue={editingCustomer?.phone}
                required
              />
            </div>
            <div className="space-y-2">
              <Label htmlFor="email">البريد الإلكتروني</Label>
              <Input 
                id="email" 
                name="email"
                type="email"
                defaultValue={editingCustomer?.email}
              />
            </div>
            <div className="space-y-2">
              <Label htmlFor="address">العنوان</Label>
              <Input 
                id="address" 
                name="address"
                defaultValue={editingCustomer?.address}
              />
            </div>
            <SheetFooter className="mt-6">
              <Button type="submit" className="w-full">
                {editingCustomer ? 'حفظ التغييرات' : 'إضافة العميل'}
              </Button>
            </SheetFooter>
          </form>
        </SheetContent>
      </Sheet>
    </div>
  );
}
